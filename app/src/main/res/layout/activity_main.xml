<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txView"
        android:layout_width="314dp"
        android:layout_height="90dp"
        android:capitalize="none"
        android:fontFamily="@font/nexa_bold"
        android:gravity="center"
        android:text="Witaj w Drink In!"
        android:textColor="#14213D"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.207" />

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="376dp"
        android:layout_height="317dp"
        android:layout_marginTop="288dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.666">

        <Button
            android:id="@+id/btnFindDrink"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:background="@drawable/btn_menu"
            android:onClick="FavsPage"
            android:text="Ulubione"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/btnDrinkChoose"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:background="@drawable/btn_menu"
            android:onClick="drinkChoosePage"
            android:text="Komponuj drinka"
            app:layout_column="0"
            app:layout_row="0" />

        <Button
            android:id="@+id/btnDrinkList"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:background="@drawable/btn_menu"
            android:onClick="ListPage"
            android:text="Spis drinkÃ³w"
            app:layout_column="0"
            app:layout_row="2" />

        <Button
            android:id="@+id/btnWebsite"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:background="@drawable/btn_menu"
            android:onClick="ListPage"
            android:text="Strona WWW"
            app:layout_column="0"
            app:layout_row="3" />

    </androidx.gridlayout.widget.GridLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="25dp"
        android:layout_height="50dp"
        android:layout_marginStart="179dp"
        android:layout_marginEnd="179dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.121"
        app:srcCompat="@drawable/img_logo" />

</androidx.constraintlayout.widget.ConstraintLayout>