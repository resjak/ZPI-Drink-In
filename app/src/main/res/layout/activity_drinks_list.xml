<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".DrinksList">

    <TextView
        android:id="@+id/txDrinksList"
        android:layout_width="388dp"
        android:layout_height="508dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="165dp"
        android:layout_marginBottom="51dp"
        android:fontFamily="@font/nexa_light"
        android:scrollbars="vertical"
        android:text="TextView"
        android:textColor="#14213D"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/btnListShowRecipe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnListShowRecipe"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="206dp"
        android:layout_marginBottom="10dp"
        android:onClick="showRecipe"
        android:text="Sprawdź przepis"
        android:background="#FCA311"
        app:layout_constraintBottom_toTopOf="@+id/btnListShow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txDrinksList" />

    <Button
        android:id="@+id/btnListShow"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="206dp"
        android:layout_marginBottom="64dp"
        android:onClick="showList"
        android:text="Wyświetl drinki"
        android:background="#FCA311"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnListShowRecipe" />

    <Button
        android:id="@+id/btnListBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="93dp"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="16dp"
        android:onClick="btnBack"
        android:text="Powrót"
        android:background="#FCA311"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btnListShow"
        app:layout_constraintTop_toBottomOf="@+id/txDrinksList"
        app:layout_constraintVertical_bias="0.203" />

</androidx.constraintlayout.widget.ConstraintLayout>